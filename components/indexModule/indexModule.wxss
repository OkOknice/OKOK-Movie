.container-index {
    padding: 40rpx;
    background: #FFF;
}

.content-top {
    font-size: 36rpx;
    display: flex;
    justify-content: space-between;
}

.content-left {
    color: #494949;
}

.content-right {
    color: #41be57;
}

.content {
    white-space: nowrap;
    margin-top: 40rpx;
}

.content-item {
    width: 200rpx;
    height: 400rpx;
    display: inline-block;
    margin-right: 20rpx;
}

.content-item .item {
    width: 100%;
    height: 284rpx;
}

.content-item .item .image {
    width: 100%;
    height: 100%;
}

.content-item .item-title {
    font-size: 28rpx;
    text-align: center;
    margin-top: 20rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    margin-bottom: 20rpx;
}