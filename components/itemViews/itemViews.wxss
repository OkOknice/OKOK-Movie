.content-item {
    width: 200rpx;
    height: 400rpx;
    display: inline-block;
    margin-right: 20rpx;
}

.content-item .item {
    width: 100%;
    height: 284rpx;
}

.content-item .item .image {
    width: 100%;
    height: 100%;
}

.content-item .content-item-detail .item-title {
    font-size: 28rpx;
    text-align: center;
    margin-top: 20rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    margin-bottom: 20rpx;
}