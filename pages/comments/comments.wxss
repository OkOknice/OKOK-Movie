.comment-wrapper{
    padding: 20rpx 30rpx;
}

.comment-group{
    display:flex;
    justify-content: flex-start;
    align-items: center;
}

.comment-image .image{
    width:40rpx;
    height:50rpx;
}

.comment-title{
    font-size:32rpx;
    font-size: 32rpx;
    color: #41be57;
    margin-left: 10rpx;
    margin-right: 10rpx;
}

.comment-rate{
    font-size: 28rpx;
    color: #ccc;
}

.comment-content-title{
    margin-top:60rpx;
    font-size:40rpx;
}

.comment-btn-wrapper{
    margin-top:60rpx;
    margin-bottom:40rpx;
    display:flex;
    justify-content: flex-start;
    align-items: center;
}

.comment-btn{
    flex:1;
    height:60rpx;
    color: #898989;
    border-color: #898989;
    line-height:60rpx;
}