.detail-wrapper{
    padding:60rpx 30rpx;
}

.detail-wrapper .detail-title{
    font-size:50rpx;
}

.detail-wrapper .detail-content{
    margin-top:30rpx;
    display:flex;
    justify-content: space-between;
}

.detail-wrapper .detail-content .detail-left{
    flex:1;
}

.detail-left .detail-rate{
    display:flex;
}

.detail-left .comment-persons{
    margin-left:20rpx;
    color:#ccc;
    font-size:28rpx;
}

.detail-left .detail-sub-item{
    margin-top:60rpx;
    font-size:32rpx;
}

.detail-sub-item .detail-time,.detail-sub-item .detail-show,.detail-sub-item .detail-actors{
    margin-bottom:20rpx;
}

.detail-wrapper .detail-content .detail-right{
    width:200rpx;
    height:300rpx;
}

.detail-right .image{
    width:100%;
    height:100%;
}

.detail-wrapper .detail-tag{
    margin-top:20rpx;
}

.detail-tag .detail-tag-title{
    font: size 32rpx;
    color:#b3b3b3;
    margin-bottom:20rpx;
}

.detail-tag .detail-tag-content{
    display:flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}

.detail-tag-content .text{
    padding:10rpx 20rpx;
    background:#f5f5f5;
    font-size:32rpx;
    color:#353535;
    text-align: center;
    border-radius:40rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.detail-comment{
    margin-top:20rpx;
    margin-bottom: 60rpx;
}

.detail-comment .detail-comment-title{
    font-size:32rpx;
    color:#b3b3b3;
}


.more-comment{
    color:#41be57;
    font-size:36rpx;
    text-align:center;
    margin-bottom:40rpx;
}